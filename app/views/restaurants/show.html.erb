<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-offset-1">
      <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body">
          <h3 class="card-title"><%= @restaurant.name %></h3><br>
          <p class="card-text">
            <strong>Address:</strong>
            <%= @restaurant.address %>
          </p>

          <p class="card-text">
            <strong>Phone:</strong>
            <%= @restaurant.phone_number %>
          </p>

          <p class="card-text">
            <strong>Category:</strong>
            <%= @restaurant.category == "bbq" ? @restaurant.category.upcase : @restaurant.category.capitalize %>
          </p>

          <p class="card-text">
            <strong>Reviews:</strong><br>
            <% if @restaurant.reviews.empty? %>
              <%= link_to 'Leave a Review', new_restaurant_review_path(@restaurant) %>
            <% else %>
              <% @restaurant.reviews.each do |review| %>
                Rating:
                <% review.rating.to_i.times do  %>
                 <i class="fas fa-star" id="solid_star" style="color: #FFCF00;"></i>
                <% end %>

                <% review.blank_stars.times do %>
                 <i class="far fa-star"></i>
                <% end %>
                <br>
                Review: <%= review.content %><br>
                <br>
              <% end %>
              <%= link_to 'Leave a Review', new_restaurant_review_path(@restaurant) %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<br>

